{
  "app": {
    "name": "MicroLab HVS-MVP",
    "version": "1.0.0",
    "locale": "pt-BR",
    "purpose": "Análise óptica e espectral de metais, cristais e gemas com microscópio + câmera"
  },
  "hardware": {
    "microscope": {
      "objective_magnification": [5, 10, 20, 40, 60, 100],
      "numerical_aperture_range": [0.1, 1.25],
      "illumination_modes": ["brightfield", "darkfield", "polarized", "DIC", "UV", "IR"],
      "stage_control": "manual",
      "camera_mount": "C-mount"
    },
    "camera": {
      "sensor_type": "CMOS",
      "resolution_px": [1920, 1080],
      "bit_depth": 12,
      "frame_rate_fps": 60,
      "raw_capture": true,
      "white_balance_modes": ["auto", "custom"],
      "exposure_modes": ["manual", "auto"],
      "lens": {
        "focal_length_mm": 35,
        "aperture_range": "f/2.8–f/16"
      }
    }
  },
  "calibration": {
    "color": {
      "workflow": "capturar carta X-Rite, gerar LUT, aplicar em pré-processamento",
      "reference_white": "D65",
      "gamma": 2.2,
      "illumination_profile": "per-modal (brightfield, darkfield, polarized, UV)"
    },
    "focus": {
      "metric": "Tenengrad",
      "thresholds": {
        "min_sharpness": 0.15,
        "ideal_sharpness": 0.35
      }
    },
    "scale": {
      "micrometer_slide_um_per_px": 0.25,
      "unit": "µm"
    }
  },
