                Dock = DockStyle.Top,
                Height = 32,
                BackColor = Color.FromArgb(10, 18, 30),
                Padding = new Padding(8, 2, 8, 2)
            };
            Controls.Add(_headerBar);

            // Borda fina entre header e toolbar
            var _headerBorder = new Panel
            {
                Dock = DockStyle.Top,
                Height = 2,
                BackColor = Color.FromArgb(25, 35, 55)
            };
            Controls.Add(_headerBorder);

            _lblTitle = new Label
            {
                Text = "TGC Metal Analítico · HVS-MVP",
