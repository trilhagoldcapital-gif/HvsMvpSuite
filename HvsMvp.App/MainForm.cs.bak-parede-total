            };
            _headerBar.Controls.Add(_lblTitle);

            _languageMenu = new ContextMenuStrip();
            _languageMenu.Items.Add("Português (pt-BR)", null, (s, e) => SetLanguage("pt-BR"));
            _languageMenu.Items.Add("English (en-US)", null, (s, e) => SetLanguage("en-US"));
            _languageMenu.Items.Add("Español (es-ES)", null, (s, e) => SetLanguage("es-ES"));
            _languageMenu.Items.Add("Français (fr-FR)", null, (s, e) => SetLanguage("fr-FR"));
            _languageMenu.Items.Add("العربية", null, (s, e) => SetLanguage("ar"));
            _languageMenu.Items.Add("中文", null, (s, e) => SetLanguage("zh-CN"));

            _btnLanguage = new Button
            {
                Text = "Idioma ▾",
                Size = new Size(90, 20),
                BackColor = Color.FromArgb(18, 30, 46),
                ForeColor = Color.WhiteSmoke,
                FlatStyle = FlatStyle.Flat,
                Anchor = AnchorStyles.Top | AnchorStyles.Right
            };
            _btnLanguage.FlatAppearance.BorderColor = Color.FromArgb(40, 60, 90);
            _btnLanguage.FlatAppearance.BorderSize = 1;
            _btnLanguage.Click += BtnLanguage_Click;
            _headerBar.Controls.Add(_btnLanguage);

            _headerBar.Resize += (s, e) =>
            {
                _btnLanguage.Location = new Point(
                    _headerBar.Width - _btnLanguage.Width - 4,
                    (_headerBar.Height - _btnLanguage.Height) / 2);
            };

            //
            // TOOLBAR (barra de botões) – ALTURA FIXA
            //
            _toolbarPanel = new Panel
            {
                Dock = DockStyle.Top,
                Height = 64,
                BackColor = Color.FromArgb(12, 24, 40),
                Padding = new Padding(6, 4, 6, 4)
            };
            Controls.Add(_toolbarPanel);

            _toolbar = new FlowLayoutPanel
            {
                Dock = DockStyle.Fill,
                FlowDirection = FlowDirection.LeftToRight,
                WrapContents = false,
                AutoScroll = true
            };
            _toolbarPanel.Controls.Add(_toolbar);

            Button Cmd(string text)
            {
                var b = new Button
                {
                    Text = text,
                    AutoSize = true,
                    Height = 22,
                    Margin = new Padding(3, 0, 3, 0),
                    Padding = new Padding(8, 1, 8, 1),
                    BackColor = Color.FromArgb(20, 40, 65),
                    ForeColor = Color.WhiteSmoke,
                    FlatStyle = FlatStyle.Flat
                };
                b.FlatAppearance.BorderColor = Color.FromArgb(60, 80, 110);
                b.FlatAppearance.BorderSize = 1;
                b.FlatAppearance.MouseOverBackColor = Color.FromArgb(30, 60, 95);
                b.FlatAppearance.MouseDownBackColor = Color.FromArgb(40, 80, 120);
                return b;
            }

            var btnOpen = Cmd("📂 Abrir imagem");
            btnOpen.Click += BtnOpenImage_Click;
            _toolbar.Controls.Add(btnOpen);

            _toolbar.Controls.Add(Cmd("▶ Live"));
            _toolbar.Controls.Add(Cmd("⏹ Parar"));
            _toolbar.Controls.Add(Cmd("🧪 Analisar"));
            _toolbar.Controls.Add(Cmd("🎨 Máscara"));
            _toolbar.Controls.Add(Cmd("🖼 Fundo mascarado"));
            _toolbar.Controls.Add(Cmd("🔬 Partículas / Dataset IA"));
            _toolbar.Controls.Add(Cmd("🔍 Zoom +"));
            _toolbar.Controls.Add(Cmd("🔎 Zoom −"));
            _toolbar.Controls.Add(Cmd("⚪ Balanço de branco"));
            _toolbar.Controls.Add(Cmd("📏 Escala"));
            _toolbar.Controls.Add(Cmd("📝 TXT"));
            _toolbar.Controls.Add(Cmd("{} JSON"));
            _toolbar.Controls.Add(Cmd("📊 CSV"));

            //
            // CORPO PRINCIPAL – Split vertical (topo / detalhes)
            //
            _verticalSplit = new SplitContainer
            {
                Dock = DockStyle.Fill,
                Orientation = Orientation.Horizontal,
                SplitterWidth = 6,
                BackColor = Color.FromArgb(20, 26, 40),
                FixedPanel = FixedPanel.None,
                IsSplitterFixed = false
            };
            Controls.Add(_verticalSplit);

            // Proporção inicial: 70% topo, 30% detalhes
            this.Load += (s, e) =>
            {
                _verticalSplit.SplitterDistance = (int)(ClientSize.Height * 0.7);
            };

            //
            // TOPO DO VERTICAL – Split horizontal (imagem / painel direito)
            //
            _horizontalSplit = new SplitContainer
            {
                Dock = DockStyle.Fill,
                Orientation = Orientation.Vertical,
                SplitterWidth = 6,
                BackColor = Color.FromArgb(20, 26, 40),
                FixedPanel = FixedPanel.None,
                IsSplitterFixed = false
            };
            _verticalSplit.Panel1.Controls.Add(_horizontalSplit);

            // Proporção inicial: 65% imagem, 35% painel
            _horizontalSplit.SplitterDistance = (int)(ClientSize.Width * 0.65);

            //
            // IMAGEM À ESQUERDA
            //
            _imagePanel = new Panel
            {
                Dock = DockStyle.Fill,
                BackColor = Color.Black,
                Padding = new Padding(8)
            };
            _horizontalSplit.Panel1.Controls.Add(_imagePanel);

            _pictureSample = new PictureBox
            {
                Dock = DockStyle.Fill,
                BackColor = Color.Black,
                SizeMode = PictureBoxSizeMode.Zoom
            };
            _imagePanel.Controls.Add(_pictureSample);

            //
            // PAINEL DIREITO – TABS COM MATERIAIS
            //
            _rightPanel = new Panel
            {
                Dock = DockStyle.Fill,
                BackColor = Color.FromArgb(8, 18, 30),
                Padding = new Padding(8)
            };
            _horizontalSplit.Panel2.Controls.Add(_rightPanel);

            _rightTabs = new TabControl
            {
                Dock = DockStyle.Fill
            };
            _rightPanel.Controls.Add(_rightTabs);

            _tabMaterials = new TabPage("Materiais")
            {
                BackColor = Color.FromArgb(8, 18, 30),
                Padding = new Padding(6, 8, 6, 6)
            };
            _rightTabs.TabPages.Add(_tabMaterials);

            _materialsLayout = new TableLayoutPanel
            {
                Dock = DockStyle.Fill,
                ColumnCount = 1,
                RowCount = 2
            };
            _materialsLayout.RowStyles.Add(new RowStyle(SizeType.AutoSize));        // cabeçalho
            _materialsLayout.RowStyles.Add(new RowStyle(SizeType.Percent, 100));    // listas
            _tabMaterials.Controls.Add(_materialsLayout);

            var matHeader = new Panel
            {
                Dock = DockStyle.Top,
                Height = 22
            };
            _materialsLayout.Controls.Add(matHeader, 0, 0);

            var lblMatTitle = new Label
            {
                Text = "Metais / Cristais / Gemas",
                AutoSize = true,
                ForeColor = Color.FromArgb(210, 220, 235),
                Font = new Font("Segoe UI", 8, FontStyle.Bold),
                Location = new Point(2, 3)
            };
            matHeader.Controls.Add(lblMatTitle);

            var columns = new TableLayoutPanel
            {
                Dock = DockStyle.Fill,
                ColumnCount = 3,
                RowCount = 1
            };
            columns.ColumnStyles.Add(new ColumnStyle(SizeType.Percent, 33.33f));
            columns.ColumnStyles.Add(new ColumnStyle(SizeType.Percent, 33.33f));
            columns.ColumnStyles.Add(new ColumnStyle(SizeType.Percent, 33.34f));
            _materialsLayout.Controls.Add(columns, 0, 1);

            (Panel colPanel, Label header, ListBox list) CreateColumn(string headerText)
            {
                var panel = new Panel
                {
                    Dock = DockStyle.Fill,
                    Padding = new Padding(4, 2, 4, 2)
                };

                var hdr = new Label
                {
                    Dock = DockStyle.Top,
                    Height = 18,
                    TextAlign = ContentAlignment.MiddleLeft,
                    ForeColor = Color.FromArgb(220, 230, 245),
                    Font = new Font("Segoe UI", 8, FontStyle.Bold),
                    Text = headerText
                };

                var lb = new ListBox
                {
                    Dock = DockStyle.Fill,
                    BackColor = Color.FromArgb(12, 24, 36),
                    ForeColor = Color.WhiteSmoke,
                    BorderStyle = BorderStyle.FixedSingle,
                    Font = new Font("Segoe UI", 8)
                };

                panel.Controls.Add(lb);
                panel.Controls.Add(hdr);

                return (panel, hdr, lb);
            }

            var (colMet, hdrMet, listMet) = CreateColumn("Metais (0)");
            _lblMetalsHeader = hdrMet;
            _listMetals = listMet;
            columns.Controls.Add(colMet, 0, 0);

            var (colCr, hdrCr, listCr) = CreateColumn("Cristais (0)");
            _lblCrystalsHeader = hdrCr;
            _listCrystals = listCr;
            columns.Controls.Add(colCr, 1, 0);

            var (colGe, hdrGe, listGe) = CreateColumn("Gemas (0)");
            _lblGemsHeader = hdrGe;
            _listGems = listGe;
            columns.Controls.Add(colGe, 2, 0);

            _listMetals.SelectedIndexChanged += (s, e) => ShowMaterialDetails(_listMetals.SelectedItem as HvsMaterial);
