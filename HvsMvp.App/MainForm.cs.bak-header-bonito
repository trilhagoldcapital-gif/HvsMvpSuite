            };

            //
            // BOTÕES – criação e distribuição nas duas faixas
            //
            Button Cmd(string text)
            {
                var b = new Button
                {
                    Text = text,
                    AutoSize = true,
                    Height = 22,
                    Margin = new Padding(4, 1, 4, 1),
                    Padding = new Padding(8, 1, 8, 1),
                    BackColor = Color.FromArgb(20, 40, 65),
                    ForeColor = Color.WhiteSmoke,
                    FlatStyle = FlatStyle.Flat
                };
                b.FlatAppearance.BorderColor = Color.FromArgb(60, 80, 110);
                b.FlatAppearance.BorderSize = 1;
                b.FlatAppearance.MouseOverBackColor = Color.FromArgb(30, 60, 95);
                b.FlatAppearance.MouseDownBackColor = Color.FromArgb(40, 80, 120);
                return b;
            }

            // Linha 1 – botões principais
            var btnOpen = Cmd("📂 Abrir imagem");
            btnOpen.Click += BtnOpenImage_Click;
            _toolbarRow1.Controls.Add(btnOpen);

            _toolbarRow1.Controls.Add(Cmd("▶ Live"));
            _toolbarRow1.Controls.Add(Cmd("⏹ Parar"));
            _toolbarRow1.Controls.Add(Cmd("🧪 Analisar"));
            _toolbarRow1.Controls.Add(Cmd("🎨 Máscara"));
            _toolbarRow1.Controls.Add(Cmd("🖼 Fundo mascarado"));

            // Linha 2 – botões adicionais
            _toolbarRow2.Controls.Add(Cmd("🔬 Partículas / Dataset IA"));
            _toolbarRow2.Controls.Add(Cmd("🔍 Zoom +"));
            _toolbarRow2.Controls.Add(Cmd("🔎 Zoom −"));
            _toolbarRow2.Controls.Add(Cmd("⚪ Balanço de branco"));
            _toolbarRow2.Controls.Add(Cmd("📏 Escala"));
            _toolbarRow2.Controls.Add(Cmd("📝 TXT"));
            _toolbarRow2.Controls.Add(Cmd("{} JSON"));
            _toolbarRow2.Controls.Add(Cmd("📊 CSV"));

            //
            // SPLIT PRINCIPAL – header (em cima) x área principal (em baixo)
            // Esta é a "parede" horizontal grossa que você pode arrastar.
            //
            _mainVerticalSplit = new SplitContainer
            {
                Dock = DockStyle.Fill,
                Orientation = Orientation.Horizontal,
                SplitterWidth = 6,
                BackColor = Color.FromArgb(30, 30, 50),
                FixedPanel = FixedPanel.None,
                IsSplitterFixed = false
            };
            Controls.Add(_mainVerticalSplit);

            // Parte de cima do split recebe somente o header+toolbars (já em _topContainer)
            _mainVerticalSplit.Panel1MinSize = 80;
            _mainVerticalSplit.Panel2MinSize = 200;
            // Importante: o _topContainer já foi adicionado ao Controls do Form com Dock=Top.
            // Vamos mover ele para o Panel1 do split para que a parede seja o Splitter.
            Controls.Remove(_topContainer);
            _mainVerticalSplit.Panel1.Controls.Add(_topContainer);
            _topContainer.Dock = DockStyle.Fill;

            // Proporção inicial: 18% para topo (botões+header), resto para área principal
            this.Load += (s, e) =>
            {
                _mainVerticalSplit.SplitterDistance = (int)(ClientSize.Height * 0.18);
            };

            //
            // ÁREA PRINCIPAL – outro split horizontal (câmera+colunas em cima / detalhes embaixo)
            //
            _contentVerticalSplit = new SplitContainer
            {
                Dock = DockStyle.Fill,
                Orientation = Orientation.Horizontal,
                SplitterWidth = 6,
                BackColor = Color.FromArgb(25, 30, 45),
                FixedPanel = FixedPanel.None,
                IsSplitterFixed = false
            };
            _mainVerticalSplit.Panel2.Controls.Add(_contentVerticalSplit);

            _contentVerticalSplit.Panel1MinSize = 200;
            _contentVerticalSplit.Panel2MinSize = 100;

            // Proporção inicial: 70% para câmera+colunas, 30% para detalhes
            _contentVerticalSplit.SplitterDistance = (int)(ClientSize.Height * 0.6);

