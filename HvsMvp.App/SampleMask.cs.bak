using System.Drawing;

namespace HvsMvp.App
{
    /// <summary>
    /// Classe de máscara por pixel: por enquanto apenas se é amostra ou fundo.
    /// </summary>
    public class SampleMaskClass
    {
        public bool IsSample { get; set; }
    }

    /// <summary>
    /// Serviço simples de máscara: define amostra = tudo que não é preto puro.
    /// Futuro: U-Net, thresholds configuráveis etc.
    /// </summary>
    public class SampleMaskService
    {
        public (SampleMaskClass[,] mask, Bitmap maskPreview) BuildMask(Bitmap bmp)
        {
            int w = bmp.Width;
            int h = bmp.Height;
            var mask = new SampleMaskClass[w, h];

            var preview = new Bitmap(w, h);
            for (int y = 0; y < h; y++)
            {
                for (int x = 0; x < w; x++)
                {
                    var c = bmp.GetPixel(x, y);
                    bool isSample = !(c.R < 5 && c.G < 5 && c.B < 5);
                    mask[x, y] = new SampleMaskClass { IsSample = isSample };

                    preview.SetPixel(x, y, isSample ? Color.Lime : Color.Black);
                }
            }

            return (mask, preview);
        }
    }
}
