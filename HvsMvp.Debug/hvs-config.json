{
  "app": {
    "name": "HVS-MVP",
    "version": "0.9.0",
    "locale": "pt-BR",
    "purpose": "Análise óptica e espectral de metais, cristais e gemas com microscópio + câmera, robusta e compatível com modelos de IA"
  },
  "hardware": {
    "microscope": {
      "objective_magnification": [5, 10, 20, 40, 60, 100],
      "numerical_aperture_range": [0.1, 1.25],
      "illumination_modes": ["brightfield", "darkfield", "polarized", "DIC", "UV", "IR"],
      "stage_control": "manual",
      "camera_mount": "C-mount"
    },
    "camera": {
      "sensor_type": "CMOS",
      "resolution_px": [1920, 1080],
      "bit_depth": 12,
      "frame_rate_fps": 60,
      "raw_capture": true,
      "white_balance_modes": ["auto", "custom"],
      "exposure_modes": ["manual", "auto"],
      "lens": {
        "focal_length_mm": 35,
        "aperture_range": "f/2.8–f/16"
      }
    }
  },
  "calibration": {
    "color": {
      "workflow": "capturar carta X-Rite, gerar LUT, aplicar em pré-processamento",
      "reference_white": "D65",
      "gamma": 2.2,
      "illumination_profile": "per-modal (brightfield, darkfield, polarized, UV)"
    },
    "focus": {
      "metric": "Tenengrad",
      "thresholds": { "min_sharpness": 0.15, "ideal_sharpness": 0.35 },
      "z_stack": { "steps": 5, "merge": "Laplace pyramid blending" }
    },
    "scale": {
      "micrometer_slide_um_per_px": 0.25,
      "unit": "µm"
    },
    "noise": {
      "denoise_method": "wavelet soft-threshold",
      "sigma_estimation": "MAD in dark regions"
    }
  },
  "features": {
    "optical": [
      "brilho_lustre",
      "reflexao_especular",
      "anisotropia_polarizada",
      "indice_refracao_aparente",
      "birefringencia_aparente",
      "fluorescencia_uv",
      "cor_hsv"
    ],
    "morfologia": [
      "tamanho_particula_um",
      "forma_particula",
      "rugosidade_superficie",
      "granulometria_histograma",
      "porosidade_aparente"
    ],
    "textura": [
      "GLCM_contraste",
      "GLCM_homogeneidade",
      "LBP_padroes",
      "Fourier_orientacao_grain"
    ],
    "espectral": [
      "picos_Raman_cm_1",
      "linhas_XRF",
      "assinatura_refletancia_VIS_NIR"
    ],
    "defeitos": [
      "inclusoes",
      "trincas",
      "contaminacao_superficial"
    ]
  },
  "ai_models": {
    "feature_extraction": {
      "cnn_backbone": "EfficientNet-B0",
      "layers_frozen": 0.5,
      "emb_dim": 256
    },
    "classification": {
      "type": "ensemble",
      "members": [
        { "model": "GradientBoosting", "inputs": ["optical", "morfologia", "textura"] },
        { "model": "SVM-RBF", "inputs": ["emb_dim"] },
        { "model": "BayesianCalibrator", "inputs": ["probabilities"] }
      ],
      "output": "posterior_probabilities"
    },
    "anomaly_detection": {
      "model": "IsolationForest",
      "contamination": 0.02
    }
  },
  "logic": {
    "preprocess": [
      { "step": "aplicar_LUT_cor", "when": "sempre" },
      { "step": "denoise_wavelet", "when": "ISO alto ou UV" },
      { "step": "equalizacao_iluminacao", "method": "flat-field", "when": "brightfield/darkfield" },
      { "step": "foco_auto", "method": "Tenengrad", "when": "z_stack" }
    ],
    "segmentation": {
      "method": "U-Net + watershed",
      "outputs": ["mask_particulas", "mask_superficie", "mask_inclusoes"]
    },
    "measurement": {
      "tamanho_particula_um": "area_pixel * µm_por_px",
      "brilho_lustre": "percentil_95_de_reflectancia",
      "reflexao_especular": "pico_histograma_regioes especulares",
      "indice_refracao_aparente": "estimado via contraste borda + modelo óptico",
      "birefringencia_aparente": "diferença de intensidade sob polarizadores cruzados",
      "fluorescencia_uv": "SNR em banda UV",
      "GLCM_contraste": "glcm(window=21) contraste",
      "LBP_padroes": "histograma LBP(8,1)",
      "Fourier_orientacao_grain": "pico de orientação dominante"
    },
    "fusion": {
      "probabilistic": "p(material | features) ∝ p(features | material) * p(material)",
      "priors": {
        "contexto_lab": { "metais": 0.6, "cristais": 0.25, "gemas": 0.15 },
        "ajuste_usuario": "permitido"
      },
      "calibration": "Platt scaling sobre ensemble"
    },
    "interference": {
      "tipos": [
        "sobreposicao_particulas",
        "contaminacao_superficial",
        "mistura_granular",
        "fluorescencia_cruzada",
        "reflexos_fortes_especulares",
        "anisotropia_polarizada_compartilhada"
      ],
      "deteccao": {
        "sobreposicao_particulas": "IoU entre objetos > 0.35",
        "contaminacao_superficial": "filme fino detectado por baixa rugosidade + espectro híbrido",
        "mistura_granular": "multimodalidade na distribuição de tamanho e textura",
        "fluorescencia_cruzada": "emissão uv fora dos picos esperados",
        "reflexos_fortes_especulares": "saturação localizada + altos gradientes",
        "anisotropia_polarizada_compartilhada": "padrões similares sob polarização com cores distintas"
      },
      "mitigacao": [
        { "acao": "alternar_modo_iluminacao", "para": ["reflexos_fortes_especulares", "fluorescencia_cruzada"], "usar": "darkfield/DIC" },
        { "acao": "polarizadores_cruzados", "para": ["anisotropia_polarizada_compartilhada"] },
        { "acao": "micro-limpeza", "para": ["contaminacao_superficial"], "nota": "se seguro para amostra" },
        { "acao": "deconvolucao", "para": ["sobreposicao_particulas"] }
      ],
      "ajuste_confiança": {
        "penalidades": {
          "leve": -0.05,
          "moderada": -0.12,
          "severa": -0.25
        }
      }
    },
    "decision": {
      "rule_set": [
        {
          "if": ["brilho_lustre > 0.85", "cor_hsv.v > 0.9", "reflexao_especular alta", "fluorescencia_uv baixa"],
          "then": "priorizar metais nobres",
          "weights": { "ouro": 0.4, "platina": 0.3, "prata": 0.3 }
        },
        {
          "if": ["birefringencia_aparente > 0.2", "anisotropia_polarizada forte", "GLCM_contraste médio", "fluorescencia_uv variável"],
          "then": "priorizar cristais anisotrópicos",
          "weights": { "quartzo": 0.35, "calcita": 0.35, "feldspato": 0.3 }
        },
        {
          "if": ["brilho_lustre alto", "inclusoes presentes", "cor_hsv.h em faixa característica", "picos_Raman_cm_1 correspondentes"],
          "then": "priorizar gemas",
          "weights": { "diamante": 0.3, "rubelita/rubis": 0.35, "esmeralda": 0.35 }
        }
      ],
      "confidence_aggregation": {
        "method": "softmax average + Bayesian calibrator",
        "accept_threshold": 0.65,
        "review_zone": [0.4, 0.65],
        "reject_threshold": 0.4
      }
    },
    "output": {
      "reports": ["material_top3", "mapa_interferencias", "medidas_morfologicas", "qualidade_imagem"],
      "visuals": ["heatmap_especular", "mapa_polarizacao", "histograma_granulometria", "espectro_Raman/XRF"]
    }
  },
